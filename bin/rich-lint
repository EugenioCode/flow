#!/usr/bin/env node

const { program } = require('commander');
const shell = require('shelljs');
program
  .option('--fix', 'format code')
  .parse()

const options = program.opts();

options.fix
  ? shell.exec('npx eslint --fix --ext .js,.vue,.ts .')
  : shell.exec('npx eslint --ext .js,.vue,.ts .')
