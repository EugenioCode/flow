#!/usr/bin/env node

const { program } = require('commander');

program
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('list', 'list available templates')
  .command('init', 'generate a new project from a template')
  .command('reset', 'reset config')
  .command('run', 'test')
  .command('merge', 'merge feature branch')
  .command('pull', 'pull the latest code')
  .command('fetch', 'fetch the latest code')
  .command('switch', 'switch branch')
  .command('commit', 'test')
  .command('add', 'test')
  .command('create', 'create new branch')
  .command('push', 'Push code to remote')
  .command('install', 'install rich\'s plugin')
  .command('uninstall', 'uninstall rich\'s plugin')
  .command('lint', 'formatting code')
  .command('branch', 'create a new branch')
  .command('dev', 'start a project')
  .command('publish', 'start a project')
  .command('build', 'build a project')
  .command('deploy')

program.parse(process.argv)
